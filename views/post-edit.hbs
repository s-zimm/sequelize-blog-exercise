<form action="/blog/:id/edit" method="GET">
    <div class="form-group">
        <label for="blog-title">Title</label>
        <input name="title" type="text" class="form-control" id="blog-title" value={{title}}>
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <input name="content" type="text" class="form-control" id="content" value={{content}}>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>